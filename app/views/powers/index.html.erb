<%= render '/layouts/layout' %>
<p style="color: green"><%= notice %></p>


<h1>Powers</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @powers.each do |power| %>
      <tr>
        <td><%= power.name %></td>
        <td><%= power.description %></td>
        <td><%= link_to 'Show', power %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'layouts/layout' %>

<p style="color: green"><%= notice %></p>

<h1>Characters</h1>

<%= paginate @characters, theme: 'twitter-bootstrap-4' %>
<style>
  .thumbnail-image {
    max-width: 100px;
    max-height: 100px;
  }
</style>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Image</th>      
      <th>Publisher</th>
      <th>Origin</th>
      <%# <th>Details</th> %>
    </tr>
  </thead>
  <tbody>
    <% @characters.each do |character| %>
      <tr> 
        <td></td>       
        <td><%= link_to character.name, character_path(character) %></td>
        <td><%= image_tag character.image, class: 'thumbnail-image' %></td>        
        <td><%= character.publisher.name %></td>
        <td><%= link_to character.origin.origin, characters_by_origin_path(character.origin_id), class: "btn btn-link" %></td>
        <%# <td><%= character.deck %></td> 
          <%= link_to "Show", characters_path(publisher_id: publisher.id), class: "btn btn-primary" %>
      </tr>
    <% end %>
  </tbody>
</table>





    <!-- Import Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Characters</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/characters">Characters</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/publishers">Publishers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/origins">Origins</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/powers">Powers</a>
            </li>
          </ul>
          <!-- Filter by origin and search -->
          <form class="d-flex" action="/characters" method="get">
            <select name="origin_id" class="form-select me-2" aria-label="Select Origin">
              <option value="">All Origins</option>
              <% @origins.each do |origin| %>
                <option value="<%= origin.id %>"><%= origin.origin %></option>
              <% end %>
            </select>
            <input type="text" name="search" class="form-control me-2" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Page content -->
    <div class="container">
      <% if @search_results.present? %>
        <h2>Search Results</h2>
        <p>Your search for "<%= @search_term %>" in the "<%= @selected_origin.origin %>" category found <%= @search_results.count %> characters.</p>
        <ul>
          <% @search_results.each do |character| %>
            <li><%= character.name %></li>
          <% end %>
        </ul>
      <% end %>
    

      <!-- Page Content -->
      <div class="container">
      <%= yield %>
      </div>
      

      <!-- Import JS files of Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

